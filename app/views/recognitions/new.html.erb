<%= render "shared/navbar" %>
<div class="container d-flex justify-content-center mt-5">
  <%= simple_form_for @recognition, remote:true do |f| %>
  <%= f.input :user, collection: ["Abby Collins", "Michael Doe", "Diana Little", "Frankie Hall", "Lily Hong", "Peter Turner"], label: "Coworker's name:", prompt: "Choose a coworker" %>
  <%= f.input :value, label: "Value to recognize:" %>
  <%= f.input :message, label: "Additional info:", as: :text %>
  <div class="d-flex justify-content-between mt-3">
    <%= link_to "Back", users_path, class: "btn btn-secondary" %>
    <%= f.submit "Submit", class: "btn btn-primary" %>
  </div>
  <% end %>
</div>
